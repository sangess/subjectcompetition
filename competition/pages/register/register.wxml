<view class="container"> 
 
 <view class="login-icon"> 
  <image class="login-img" src="{{logoUrl}}"></image> 
 </view> 
 <form bindsubmit="login"  class="login-from"> 
    <!--账号-->
    <view class="inputView"> 
      <image class="nameImage" src="{{nameUrl}}"></image> 
      <label class="loginLab">账号</label> 
      <input class="inputText"  name="username" placeholder="请输入学生账号"  /> 
    </view> 
    <view class="line"></view> 
    
    <!--密码-->
    <view class="inputView"> 
      <image class="keyImage" src="{{keyUrl}}"></image> 
      <label class="loginLab">密码</label> 
      <input class="inputText" password="true" name="password" placeholder="请输入密码"  /> 
  </view> 
    
  
  <!--按钮-->
  <view class="loginBtnView"> 
    <button class="loginBtn"   formType="submit" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}">登录</button> 
  </view> 
</form>
</view>
